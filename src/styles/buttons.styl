button-big-circle()
  --color #9b0512
  --border-color #620606

  colorBg = var(--color)
  colorBorder = var(--border-color)

  font-large()
  font-weight 700

  background colorBg
  border 5px solid colorBorder
  border-radius 50%
  color white
  display flex
  flex-direction column
  align-items center
  justify-content center
  cursor pointer
  user-select none
  box-shadow 10px 20px 0 colorBorder
  transition filter 0.2s ease, box-shadow 0.1s ease, transform 0.1s ease, color 0.2s ease
  img
    transition filter 0.1s ease
  &:not([disabled]):active
    img // for icons inside
      filter brightness(1.5)
    filter saturate(1.5)
    transform translate(10px, 20px)
    box-shadow 0px 0px 0 colorBorder
  &[disabled]:not([disabled-silent])
    filter grayscale(0.8) brightness(1.3)
    color textColor5
