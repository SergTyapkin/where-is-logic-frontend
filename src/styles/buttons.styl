button-green()
  color = #2eaaa4
  colorBorder = #12837e

  colorDisabled = #2eaaa44c
  colorDisabledBorder = #12837e80

  colorActive = #12837e
  colorActiveBorder = #10726e

  borderRadius = 4px

  font-medium()
  font-weight 700

  background color
  border 2px solid colorBorder
  border-radius borderRadius
  color #fff
  transition background-color 0.1s ease, border-color 0.1s ease
  padding 10px
  cursor pointer
  user-select none
  img
    transition filter 0.1s ease
  &:active
    img // for icons inside
      filter brightness(1.5)
    background-color colorActive
    border-color colorActiveBorder
  &[disabled]:not([disabled-silent])
    background-color colorDisabled
    border-color colorDisabledBorder


button-green-no-borders()
  color = transparent
  colorText = #2eaaa4

  colorDisabledText = #2eaaa44c

  colorActiveText = #12837e

  borderRadius = 4px

  font-small-bold()

  background-color color
  border-radius borderRadius
  color colorText
  border none
  transition unquote('color') 0.1s ease
  padding 10px
  cursor pointer
  user-select none
  img
    transition filter 0.1s ease
  &:active
    img // for icons inside
      filter brightness(1.5)
    color colorActiveText
  &[disabled]:not([disabled-silent])
    color colorDisabledText


button-gray()
  color = #fff
  colorBorder = textColorDark2
  colorText = textColorDark2

  colorActive = textColorDark2
  colorActiveBorder = textColorDark2
  colorActiveText = #fff

  borderRadius = 8px

  font-medium()
  font-weight 700

  background color
  border 4px solid colorBorder
  border-radius borderRadius
  color colorText
  transition background-color 0.1s ease, border-color 0.1s ease, unquote('color') 0.1s ease, opacity 0.1s ease
  padding 10px
  cursor pointer
  user-select none
  img
    transition filter 0.1s ease
  &:active
  &.active
    img // for icons inside
      filter brightness(1.5)
    background-color colorActive
    border-color colorActiveBorder
    color colorActiveText
  &[disabled]:not([disabled-silent])
    opacity 0.5

